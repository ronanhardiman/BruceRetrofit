<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.iyouqu.bruceretrofit"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/swipeable"
            >
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <activity
            android:name=".ui.CoordinatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/swipeable"
            ></activity>
        <activity
            android:name=".ui.CoordinatorActivity2"
            android:screenOrientation="portrait"
            android:theme="@style/swipeable"
            ></activity>
        <activity android:name=".ui.Activity.MVPActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/swipeable">
        </activity>

        <receiver android:name=".network.ConnectionChangeReceiver"
                  android:enabled="false"
            >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

        <!-- Glide configurations for image loading -->
        <meta-data
            android:name="net.iyouqu.bruceretrofit.util.glide.GlideConfiguration"
            android:value="GlideModule" />
        <meta-data
            android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
            android:value="GlideModule" />
    </application>

</manifest>
